{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2021",
    "lib": ["ES2021"],

    /* Modules */
    "module": "commonjs",
    "rootDir": ".",

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": true,

    /* Emit */
    "outDir": "./dist",
    "sourceMap": false,
    "removeComments": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "build"]
}
